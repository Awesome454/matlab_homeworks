%Creating the function
function encrypt = caesar_cipher(message, shift)

%Change message to numbers
a = double(message);

%limit shift 0-25
shift = mod(shift, 26);

%Add shift ot message
a_m = a + shift;

%Looping it back to the beginning
for i = 1:length(a_m)
    if a_m(i)>122
        a_m(i) = a_m(i)-26;
    end
    if a_m(i)<97
        a_m(i) = a_m(i)+26;
    end 
end

%Print orginal message
fprintf('Original message: %s \n', message)

%Print encrypted message
fprintf('Encrypted message: %s \n', char(a_m))
encrypt = char(a_m);
end
